<UserControl x:Class="WpfStateViewModel.Views.ThanksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="404">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="First Name:" />
                <Label Content="{Binding Bug.FirstName}" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Last Name:" />
                <Label Content="{Binding Bug.LastName}" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Email::" />
                <Label Content="{Binding Bug.Email}" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Bug:" />
                <Label Content="{Binding Bug.Text}" />
            </StackPanel>
            
            <TextBlock Margin="5,10,5,5" Text="Thanks for providing your bug find." TextWrapping="Wrap" />
            <Button Content="Start Over" Command="{Binding StartOverCommand}" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
